<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include("./partials/header.ejs") %>
    <span id= "index">
    <h1>Index</h1>
</span>
    <% data.forEach(function(pokemon, i) { %>
        <div class = "gallery">
       
            <a href="/pokemon/<%= i %>"> 
                <div class="img">
            <img src="<%= pokemon.img %>" alt=""> 
        </div>  
            </a>
        <div class ="name">
            <h3><%= pokemon.name %></h3>
    </div>
    <div class = "delete">
            <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form>
        </div>
        <div class = "edit">
            <a href="/pokemon/<%=i %>/edit">EDIT</a>
        </div>
        
        
    </div>
  <% }) %>
</body>
</html>